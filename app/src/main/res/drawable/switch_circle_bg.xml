<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33000000" /> <!-- Semi-transparent shadow -->
        </shape>
    </item>

    <!-- Main White Circle with Border -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <padding android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp" />
        </shape>
    </item>
</layer-list>
